Public Property Get ciasParentObj() As Cias

    Dim strSql As String, rs As DAO.Recordset

    ' -----------------------------------------------------------------------------------------------------------------------------------------------
    If IsNull(lngCiaKey) = False And Not mdbDb Is Nothing Then
        If lngCiaKey > 0 Then
            
            strSql = "SELECT cia.ciaKey, cia.ciaCnInvAccntSmpl FROM ags_cnInvAccnt AS cia WHERE (((cia.ciaKey)=" & lngCiaKey & "));"
            Set rs = mdbDb.OpenRecordset(strSql, dbOpenSnapshot)
            If rs.RecordCount > 0 Then
                Set ciasParentObj = ClassFactory.ciasByKey(rs!ciaCnInvAccntSmpl, mdbDb)
            End If
            rs.Close: Set rs = Nothing
        Else
            Set ciasParentObj = Nothing
        End If
    Else
        Set ciasParentObj = Nothing
    End If
